<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="DjonTraore.MainPage">
  <Frame>
    <Frame.Margin>
      <OnPlatform x:TypeArguments="Thickness" iOS="0,20,0,0" />
    </Frame.Margin>
    <StackLayout>
      <StackLayout.Children>
        <Label Text="{Binding MainText}" VerticalOptions="Center" HorizontalOptions="Center"></Label>
        <BoxView x:Name="bxvwColor"  Color="Yellow" WidthRequest="50" HeightRequest="50" />
      </StackLayout.Children>
    </StackLayout>
  </Frame>
</ContentPage>